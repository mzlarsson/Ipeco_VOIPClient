<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/relStart_layout"
    android:layout_height="match_parent"

    android:gravity="left|top"
    android:orientation="vertical"
    android:weightSum="1"
    android:clickable="true"
    android:focusable="true"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:gravity="left|top"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/connectionButton">
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:linksClickable="false"
            android:hint="@string/username_text"
            android:textSize="24dp"
            android:id="@+id/usernameField"
            android:inputType="text"
                />

        <EditText
            android:layout_marginTop="50dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:linksClickable="false"
            android:hint="@string/ip_adress_text"
            android:textSize="24dp"
            android:id="@+id/ipField"
            android:inputType="text"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_weight="0.1"
            android:linksClickable="false"
            android:id="@+id/portField"
            android:hint="@string/port_number_text"
 />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_preferences"
            android:id="@+id/saveUserPref"
            android:layout_weight="0.5" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car mode"
            android:onClick="CarTrue"
            android:id="@+id/button3"
            android:layout_weight="0.1" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showConnect"
            android:text="Connecting"
            android:id="@+id/button4"
            android:layout_gravity="clip_horizontal"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demo"
            android:onClick="startDemo"
            android:id="@+id/demoButton"
            android:layout_below="@+id/progressBar2"
            android:layout_toRightOf="@+id/progressBar2"
            android:layout_toEndOf="@+id/progressBar2" />


    </LinearLayout>

    <Button
        android:text="@string/connect_text"
        android:id="@+id/connectionButton"
        android:onClick="onConnectButtonClick"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/button_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#DD111111"
        android:visibility="invisible">

        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:indeterminate="true"
            android:id="@+id/progressBar2" /><![CDATA[



        />

    ]]>
    </RelativeLayout>
</RelativeLayout>
