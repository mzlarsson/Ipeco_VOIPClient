<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.chalmers.fleetspeak" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Dark_theme" >
        <activity
            android:name=".fragments.MainActivity"
            android:configChanges="orientation|layoutDirection|screenSize|screenLayout"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".SocketService"
            android:enabled="true" />

        <activity
            android:name=".fragments.NewStructure.LoginProcess.MainFragmentActivity"
            android:label="@string/title_activity_main_fragment" >
        </activity>
        <activity
            android:name=".fragments.NewStructure.LoginProcess.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".fragments.NewStructure.ConnectedProcess.ConnectionActivity"
            android:label="@string/title_activity_connection" >
        </activity>
    </application>

</manifest>
