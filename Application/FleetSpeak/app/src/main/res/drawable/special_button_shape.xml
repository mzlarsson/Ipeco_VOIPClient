<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@drawable/special_button_clicked" />
    <item android:state_focused="true" android:drawable="@drawable/special_button_focused" />
    <item android:state_enabled="false" android:drawable="@drawable/special_button_disabled" />
    <item>
        <shape android:shape="rectangle" >
            <corners
                android:topLeftRadius="50dp"
                android:topRightRadius="50dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                />
            <gradient
                android:angle="270"
                android:centerX="35%"
                android:centerColor="#99CC00"
                android:startColor="#BAF700"
                android:endColor="#669900"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="2dp"
                android:color="#000000"
                />
        </shape>
    </item>
</selector>
